FROM oraclelinux:10

MAINTAINER ttaiclet@ripe.net

RUN dnf distro-sync -y --nodocs && \
    dnf install -y --nodocs --setopt=install_weak_deps=False \
        # repo tools
        git rpmdevtools \
        # code building tools
        autoconf automake libtool make gcc \
        # dependencies
        openssl-devel && \
    rm -rf /var/cache/dnf
